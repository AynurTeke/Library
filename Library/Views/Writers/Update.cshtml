
@{
    Library.Models.Library.WritesRow writerRow = (Library.Models.Library.WritesRow)ViewData["writerRow"];
}

<h2>Add</h2>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<form action="~/writers/processWriter" method="post">
    <input type="text" name="writerName" id="writerName" placeholder="Yazar Adı" data-val="true" data-val-required="Bu alan boş geçilemez!" maxlength="100" value="@writerRow.writersName" />
    <span class="field-validation-valid" data-valmsg-for="writerName" data-valmsg-replace="true"></span> <!-- valmsg-usernamein hata mesajlarını bu id de ver class hazır scriptin classı -->
    <input type="text" name="writerSurname" id="writerSurname" placeholder="Yazar Soyadı" maxlength="100"/>
    <input type="text" name="AKA" id="AKA" placeholder="Mahlas" maxlength="50" />
    <input type="hidden" name="id" value="@writerRow.id" />
    <input type="submit" value="TAMAM" />
</form>
@if (ViewData["error"] != null)
{
    <span>@ViewData["error"]</span>
}