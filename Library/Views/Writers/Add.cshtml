
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<form action="~/writers/processnewwriter" method="post">
    <input type="text" name="writerName" id="writerName" placeholder="Adı" data-val="true" data-val-required="Bu alan boş geçilemez!" maxlength="100" />
    <span class="field-validation-valid" data-valmsg-for="writerName" data-valmsg-replace="true"></span> <!-- valmsg-usernamein hata mesajlarını bu id de ver class hazır scriptin classı -->
    <input type="text" name="surname"  placeholder="Soyadı" maxlength="50" />
    <input type="text" name="AKA" placeholder="Mahlas" maxlength="50" />
    <input type="submit" value="TAMAM" />
</form>
@if (ViewData["error"] != null)
{
    <span>@ViewData["error"]</span>
}